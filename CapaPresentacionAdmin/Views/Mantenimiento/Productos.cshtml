@{
    ViewData["Title"] = "Productos";
}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="#">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Productos</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="bi bi-box-seam me-1"></i> Lista de productos
    </div>
    <div class="card-body">
        <button class="btn btn-success mb-3" onclick="abrirModal(null)">
            <i class="bi bi-plus-circle"></i> Nuevo producto
        </button>

        <table id="tablaProductos" class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Marca</th>
                    <th>Categoría</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Activo</th>
                    <th>Imagen</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>

<!-- MODAL -->
<div class="modal fade" id="modalProducto" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Producto</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="hidden" id="txtid">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label>Nombre</label>
                        <input type="text" id="txtnombre" class="form-control"
                               placeholder="Ingrese el nombre del producto">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label>Descripción</label>
                        <input type="text" id="txtdescripcion" class="form-control"
                               placeholder="Ingrese una descripción">
                    </div>

                    <div class="col-md-6 mb-3">
                        <label>Marca</label>
                        <select id="cbomarca" class="form-select">
                            <option value="" selected disabled>Seleccione una marca</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label>Categoría</label>
                        <select id="cbocategoria" class="form-select">
                            <option value="" selected disabled>Seleccione una categoría</option>
                        </select>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label>Precio</label>
                        <input type="text" id="txtprecio" class="form-control"
                               placeholder="0,00">
                    </div>

                    <div class="col-md-4 mb-3">
                        <label>Stock</label>
                        <input type="number" id="txtstock" class="form-control"
                               min="0" placeholder="Cantidad disponible">
                    </div>

                    <div class="col-md-4 mb-3">
                        <label>Activo</label>
                        <select id="cboactivo" class="form-select">
                            <option value="" selected disabled>Seleccione estado</option>
                            <option value="1">Sí</option>
                            <option value="0">No</option>
                        </select>
                    </div>

                    <div class="col-md-12 mb-3">
                        <label>Imagen</label>
                        <input type="file" id="fileImagen" class="form-control"
                               accept="image/png, image/jpeg, image/jpg">
                    </div>

                    <div class="col-md-12 mb-3 text-center">
                        <img id="imgPreview"
                             src="/imagenes/no-image.png"
                             class="img-thumbnail"
                             style="max-height:400px; display:none;">
                    </div>

                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger d-none"></div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button class="btn btn-primary" onclick="guardar()">Guardar</button>
            </div>

        </div>
    </div>
</div>


@section scripts {
    <script>
        let tablaProductos;
        let filaSeleccionada;

        tablaProductos = new DataTable('#tablaProductos', {
            responsive: true,
            ordering: false,
            ajax: {
                url: '@Url.Action("ListarProductos", "Mantenimiento")',
                type: 'GET',
                dataType: 'json'
            },
            columns: [
                { data: 'nombre' },
                { data: 'oMarca.descripcion' },
                { data: 'oCategoria.descripcion' },
                { data: 'precio',
                render: function (data) {
                    return new Intl.NumberFormat('es-AR', {
                        style: 'currency',
                        currency: 'ARS'
                    }).format(data);
                    }
                },
                { data: 'stock' },
                { data: 'ruta_imagen', render: function (data) {
                    if (data) {
                        return `<img src="${data}"
                                    class="img-thumbnail"
                                    style="height:40px;object-fit:cover">`;
                    }
                    return `<span class="text-muted">Sin imagen</span>`;
                    }
                },
                {
                    data: 'activo',
                    render: d => d
                        ? '<span class="badge bg-success">Sí</span>'
                        : '<span class="badge bg-danger">No</span>'
                },
                {
                    defaultContent:
                        `<button class="btn btn-primary btn-editar"><i class="fas fa-pen"></i></button>
                         <button class="btn btn-danger ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>`
                }
            ],
            language: {
                url: "https://cdn.datatables.net/plug-ins/2.3.6/i18n/es-ES.json"
            }
        });

        function cargarCombos(producto = null) {

            $.get('@Url.Action("ListarMarcas", "Mantenimiento")', r => {
                const cboMarca = $("#cbomarca");
                cboMarca.empty();

                cboMarca.append(
                    `<option value="" disabled selected>Seleccione una marca</option>`
                );

                r.data.forEach(m => {
                    cboMarca.append(
                        `<option value="${m.id}">${m.descripcion}</option>`
                    );
                });

                // 👉 seleccionar marca SOLO cuando ya cargó
                if (producto) {
                    cboMarca.val(producto.oMarca.id);
                }
            });

            $.get('@Url.Action("ListarCategorias", "Mantenimiento")', r => {
                const cboCategoria = $("#cbocategoria");
                cboCategoria.empty();

                cboCategoria.append(
                    `<option value="" disabled selected>Seleccione una categoría</option>`
                );

                r.data.forEach(c => {
                    cboCategoria.append(
                        `<option value="${c.id}">${c.descripcion}</option>`
                    );
                });

                // 👉 seleccionar categoría SOLO cuando ya cargó
                if (producto) {
                    cboCategoria.val(producto.oCategoria.id);
                }
            });
        }



        function abrirModal(data) {
            $("#mensajeError").addClass("d-none");

            cargarCombos(data);

            if (data) {
                $("#txtid").val(data.id);
                $("#txtnombre").val(data.nombre);
                $("#txtdescripcion").val(data.descripcion);
                $("#txtprecio").val(data.precio);
                $("#txtstock").val(data.stock);
                $("#cboactivo").val(data.activo ? 1 : 0);
                $("#fileImagen").val("");
            } else {
                $("#txtid").val(0);
                $("input, select").val("");
                $("#imgPreview").hide();
            }

            if (data && data.ruta_imagen) {
                $("#imgPreview")
                    .attr("src", data.ruta_imagen)
                    .show();
            } else {
                $("#imgPreview").hide();
            }

            new bootstrap.Modal("#modalProducto").show();
        }


        $("#tablaProductos tbody").on("click", ".btn-editar", function () {
            filaSeleccionada = $(this).closest("tr");
            abrirModal(tablaProductos.row(filaSeleccionada).data());
        });

        //2 Preview al SELECCIONAR un archivo (en vivo)
        $("#fileImagen").on("change", function () {
            let file = this.files[0];

            if (!file) {
                $("#imgPreview").hide();
                return;
            }

            let reader = new FileReader();
            reader.onload = function (e) {
                $("#imgPreview")
                    .attr("src", e.target.result)
                    .show();
            };
            reader.readAsDataURL(file);
        });

        function guardar() {

            // limpiar mensaje previo
            $("#mensajeError").addClass("d-none").text("");

            // capturar valores
            const nombre = $("#txtnombre").val().trim();
            const descripcion = $("#txtdescripcion").val().trim();
            const precioTexto = $("#txtprecio").val().trim();
            const stock = $("#txtstock").val();
            const idMarca = $("#cbomarca").val();
            const idCategoria = $("#cbocategoria").val();

            // VALIDACIONES
            if (!nombre) {
                mostrarError("El nombre del producto es obligatorio");
                return;
            }

            if (!descripcion) {
                mostrarError("La descripción del producto es obligatoria");
                return;
            }

            if (!idMarca) {
                mostrarError("Debe seleccionar una marca");
                return;
            }

            if (!idCategoria) {
                mostrarError("Debe seleccionar una categoría");
                return;
            }

            if (!precioTexto || isNaN(precioTexto.replace(",", "."))) {
                mostrarError("Debe ingresar un precio válido");
                return;
            }

            if (stock === "" || isNaN(stock) || parseInt(stock) < 0) {
                mostrarError("El stock debe ser un número mayor o igual a 0");
                return;
            }

            // ARMAR OBJETO (ya validado)
            let producto = {
                id: parseInt($("#txtid").val()) || 0,
                nombre: nombre,
                descripcion: descripcion,
                precioTexto: precioTexto,
                stock: parseInt(stock),
                activo: $("#cboactivo").val() == 1,
                oMarca: { id: parseInt(idMarca) },
                oCategoria: { id: parseInt(idCategoria) }
            };

            let formData = new FormData();
            formData.append("objeto", JSON.stringify(producto));
            formData.append("archivoImagen", $("#fileImagen")[0].files[0]);

            $.ajax({
                url: '@Url.Action("GuardarProducto", "Mantenimiento")',
                type: 'POST',
                data: formData,
                contentType: false,
                processData: false,
                success: function (r) {
                    if (r.resultado) {
                        tablaProductos.ajax.reload();
                        $("#modalProducto").modal("hide");
                        Swal.fire("OK", r.mensaje, "success");
                    } else {
                        mostrarError(r.mensaje);
                    }
                }
            });
        }

        function mostrarError(mensaje) {
            $("#mensajeError")
                .removeClass("d-none")
                .text(mensaje);
        }


         $("#tablaProductos tbody").on("click", ".btn-eliminar", function () {
            let fila = $(this).closest("tr");
            let info = tablaProductos.row(fila).data();

            Swal.fire({
                title: "Eliminar este registro?",
                text: "Esta acción no se puede deshacer!",
                icon: "warning",
                reverseButtons: true,
                showCancelButton: true,
                onfirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Sí, eliminar!",
                cancelButtonText: "Cancelar"
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("EliminarProducto", "Mantenimiento")', { id: info.id }, function (data) {
                        if (data.resultado) {
                            tablaProductos.row(fila).remove().draw();
                            Swal.fire("Eliminado", "Registro eliminado.", "success");
                        } else {
                            Swal.fire("Error", data.mensaje, "error");
                        }
                    });
                }
            });
        });
    </script>
}

