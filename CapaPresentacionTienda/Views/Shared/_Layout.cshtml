<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CapaPresentacionTienda</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CapaPresentacionTienda.styles.css" asp-append-version="true" />

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
</head>
<body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top">
        <div class="container-fluid px-4 px-lg-5">
            <a class="navbar-brand" href="#!">Tienda Online</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Tienda")">Inicio</a></li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <form class="d-flex">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <button class="btn btn-outline-dark m-1 d-none d-lg-inline-block" type="submit">
                                <i class="bi-cart-fill me-1"></i>
                                Carrito
                                <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                            </button>
                            <div class="btn-group dropstart d-none d-lg-inline-block">
                                <button type="button"
                                        class="btn btn-outline-dark rounded-pill"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <i class="fas fa-user"></i>
                                </button>

                                <ul class="dropdown-menu text-center">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            @User.Identity.Name
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            Mis Compras
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item"
                                           href="@Url.Action("CerrarSesion", "Acceso")">
                                            <i class="bi bi-box-arrow-right me-1"></i>
                                            Cerrar sesión
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <!-- Visible solo en mobile -->
                            <button class="btn btn-outline-dark mb-2 d-lg-none w-100 rounded-pill" type="submit">
                                <i class="bi-cart-fill me-1"></i>
                                Carrito
                                <span class="badge bg-dark text-white ms-1 rounded-pill">0</span>
                            </button>
                            <div class="btn-group d-lg-none text-center w-100">
                                <button type="button"
                                        class="btn btn-outline-dark rounded-pill"
                                        data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <i class="fas fa-user"></i>
                                </button>

                                <ul class="dropdown-menu text-center">
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            @User.Identity.Name
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">
                                            Mis Compras
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item"
                                           href="@Url.Action("CerrarSesion", "Acceso")">
                                            <i class="bi bi-box-arrow-right me-1"></i>
                                            Cerrar sesión
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <!-- Visible solo en mobile -->
                        }
                        else
                        {
                            <!-- Visible solo en PC con d-none d-lg-inline-block-->
                            <a class="btn btn-outline-primary d-none d-lg-inline-block"
                               href="@Url.Action("Index", "Acceso")">
                                <i class="bi bi-box-arrow-in-right me-1"></i>
                                Iniciar sesión
                            </a>
                            <!-- Visible solo en mobile d-lg-none -->
                            <a class="btn btn-outline-primary d-lg-none w-100 rounded-pill"
                               href="@Url.Action("Index", "Acceso")">
                                <i class="bi bi-box-arrow-in-right me-1"></i>
                                Iniciar sesión
                            </a>
                            <!-- Visible solo en mobile -->
                        }
                    </form>
                </form>
            </div>
        </div>
    </nav>

    <div class="d-grid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer-->
    <footer class="py-5 bg-dark">
        <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p></div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.6/css/dataTables.dataTables.css" />
    <script src="https://cdn.datatables.net/2.3.6/js/dataTables.js"></script>

    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/3.0.2/css/responsive.dataTables.min.css" />
    <script src="https://cdn.datatables.net/responsive/3.0.2/js/dataTables.responsive.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/js/script.js"></script>
    <script src="~/js/loadingoverlay.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Flatpickr -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/es.js"></script>

    <!-- Toggle Sidebar -->
    <script>
        $(document).ready(function () {
            $('#sidebarToggle').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
